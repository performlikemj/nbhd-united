STRIPE_PRICE_PLUS=price_...

# Frontend/backend URLs
FRONTEND_URL=http://localhost:3000
USAGE_DASHBOARD_SUBSCRIPTION_PRICE=5.0
API_BASE_URL=http://localhost:8000

# Anthropic API (shared key â€” all OpenClaw instances use this)
ANTHROPIC_API_KEY=sk-ant-...
# OpenAI API key for Whisper/transcription (shared key for all OpenClaw instances)
